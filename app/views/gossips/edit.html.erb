<%if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à modifier le potin : </p>
    <ul><li>Les champs titre et contenu doivent être obligatoirement remplis
    <li>Le titre du Gossip doit contenir entre 3 et 14 caractères
    </ul>
  </div><br />
<% end %>


<h1> Editer le potin </h1>

<% gossip = Gossip.find(params[:id]) %>

<%= form_for gossip do |f| %>

  <div class="form-group">
  <label>Titre du gossip</label>
  <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
  <label>Contenu du gossip</label>
  <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
  <button type="submit" class = "btn btn-primary"  >Modifier l'article</button>
  </div>

<% end %>